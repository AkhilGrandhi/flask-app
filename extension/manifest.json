{
  "manifest_version": 3,
  "name": "Candidate Autofill (Prototype)",
  "version": "0.0.4",
  "description": "Popup loads Users & Candidates from Flask; logs candidate + form schema.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": [
    "https://flask-app-r5xw.onrender.com/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
