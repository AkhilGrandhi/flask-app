{
  "manifest_version": 3,
  "name": "Data Fyre - Candidate Autofill",
  "version": "1.0.0",
  "description": "AI-powered candidate autofill extension by Data Fyre Pvt. Ltd.",
  "permissions": ["storage", "tabs", "scripting"],
  "icons": {
    "16": "only_logo.png",
    "48": "only_logo.png",
    "128": "only_logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "only_logo.png",
      "48": "only_logo.png",
      "128": "only_logo.png"
    }
  },
  "host_permissions": [
    "https://flask-app-r5xw.onrender.com/*",
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "http://0.0.0.0:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
